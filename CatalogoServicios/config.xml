<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.DMJG" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Catalogo de Servicios</name>
    <description>
        Proyecto Final PhoneGap 2018
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        Joel Díaz Martínez
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="Imagenes/icono.png" gap:density="ldpi" gap:platform="android" />
    <icon src="Imagenes/icono.png" gap:density="mdpi" gap:platform="android" />
    <icon src="Imagenes/icono.png" gap:density="hdpi" gap:platform="android" />
    <icon src="Imagenes/icono.png" gap:density="xhdpi" gap:platform="android" />

    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />

<feature name="NetworkStatus">
    <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
</feature>
    
    

    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="InAppBrowser">
    <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
    </feature>
    
    
    
        <access origin="*"/>
    <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


</widget>
